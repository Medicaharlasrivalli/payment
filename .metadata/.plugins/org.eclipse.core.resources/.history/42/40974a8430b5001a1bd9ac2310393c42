package com.corebanking.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.corebanking.model.Response;

@RestController
public class CorebankingController {

	@Autowired
	private PaymentServiceProxy pro;
	
	@GetMapping("/user/{id}/payment/direct?amount={amount}&targetAccNo={targetAccNo}&targetCurrency={targetCurrency}")
	public Response processLocalPayment(@PathVariable("id") int id,@RequestParam("taregetAccNo") long tarAcc,@RequestParam("targetCurrency") String tarCur)
	{
		Response r=pro.doLoalPayments(id, tarAcc, tarAcc, tarCur);
		return r;
	}
	
}
