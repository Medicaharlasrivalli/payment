package com.corebanking.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.PathVariable;

import com.corebanking.model.Response;

@RestController
public class CorebankingController {

	@Autowired
	private PaymentServiceProxy pro;
	
	@PutMapping("/user/{id}/payment/direct")
	public Response processLocalPayment(@PathVariable("id") int id)
	{
		Response r=pro.doLoalPayments(id);
		return r;
	}
	
}
