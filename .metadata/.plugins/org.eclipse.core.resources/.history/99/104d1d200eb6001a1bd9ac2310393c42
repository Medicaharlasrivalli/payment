package com.payment.controller;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.payment.model.FinalResponse;
import com.payment.model.Response;

@FeignClient(name="core-banking-service", url="http://localhost:8181")
public interface CoreBankingProxy {
	
	@RequestMapping(method=RequestMethod.PUT,path="/user/{id}/payment/direct/{Response}",produces="application/json")
	public FinalResponse processLocalPayments(@PathVariable("id") int id,@PathVariable("Response") Response r);
}
