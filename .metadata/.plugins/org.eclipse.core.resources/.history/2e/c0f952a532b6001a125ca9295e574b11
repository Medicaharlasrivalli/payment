package com.payment.controller;

import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.payment.model.Customer;
import com.payment.model.FinalResponse;
import com.payment.model.Response;

@RestController
public class PaymentController {
	
	@Autowired
	private PaymentRepository repo;
	
	@Autowired
	private ResponseRepository repo1;
	
	@Autowired
	private CoreBankingProxy pro;
	
	@GetMapping(path="/user/payment/direct",produces="application/json")
	public FinalResponse doLocalPayments(@RequestParam("id") int id,@RequestParam("amount") double amount,@RequestParam("targetAccNo") long targetAccNo,@RequestParam("targetCurrency") String targetCurrency) {
		String tid=UUID.randomUUID().toString();
		Customer cus=repo.findById(id).orElse(null);
		Response r=new Response(tid,cus.getAccountno(),targetAccNo,"INR",targetCurrency,amount);
		repo1.save(r);
		FinalResponse fe=pro.processLocalPayments(r);
		return fe;
		
	}

}
